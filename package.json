{
  "name": "lake",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "compose": "docker-compose -f ./devops/docker-compose.yml --project-directory ./ up ",
    "compose-down": "docker-compose -f ./devops/docker-compose.yml --project-directory ./ down ",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "all": "concurrently \"nest start reset\" \"nest start queue\"",
    "all:dev": "concurrently \"nest start reset --watch\" \"nest start queue --watch\"",
    "queue": "nest start queue",
    "rest": "nest start rest",
    "queue:dev": "nest start queue --watch",
    "rest:dev": "nest start rest --watch",
    "lint": "eslint \"{apps,plugins}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "test:core:e2e": "jest --config ./apps/core/test/jest-e2e.json",
    "commit": "cz"
  },
  "dependencies": {
    "@nestjs/bull": "^0.4.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/microservices": "^8.0.5",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.2",
    "bull": "^3.27.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.36",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bull": "^3.15.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.0.0",
    "@types/redis": "^2.8.31",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "ioredis-mock": "^5.6.0",
    "jest": "27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^plugins($|(/.*$))": "<rootDir>/plugins$1"
    },
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "./(apps|plugins)/**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".*\\.e2e-spec\\.ts$"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "apps/rest/test",
      "apps/queue/test",
      ".eslintrc.js",
      "config",
      "commitlint.config.js",
      "plugins/.+/.+/migrates"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|css|less|scss|ts|tsx)": [
      "eslint --fix",
      "git add"
    ]
  }
}
